<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetUpProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/superiorSetupToolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/MyToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/deep_pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/addProfilePic"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="60dp"
        android:src="@drawable/user_setup_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Bio"
        android:textColor="@color/grey"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/editTextTextBio"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/light_pink"
        android:ems="10"
        android:hint="Nos conte mas sobre vocÃª!"
        android:inputType="text"
        android:padding="16dp"
        android:textSize="17dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveProfile"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/deep_pink"
            android:text="Confirmar"
            android:textAllCaps="true"
            android:textColor="@color/light_grey"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>