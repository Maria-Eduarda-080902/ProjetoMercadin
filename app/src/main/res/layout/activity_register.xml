<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logotipoMarcadin"
            android:layout_width="164dp"
            android:layout_height="147dp"
            android:layout_marginHorizontal="65dp"
            android:adjustViewBounds="true"
            android:rotationX="-8"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/logomarca_mercadin" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nome Completo"
            android:textColor="@color/grey"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/editTextTextName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/light_pink"
            android:ems="10"
            android:hint="Fulana Beltrana da Silva"
            android:inputType="text"
            android:padding="16dp"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textViewEmailRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="E-mail"
            android:textColor="@color/grey"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/editTextTextEmailRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/light_pink"
            android:ems="10"
            android:hint="meuemail@email.com"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textViewCPF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="CPF"
            android:textColor="@color/grey"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/editTextTextCPF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/light_pink"
            android:ems="10"
            android:hint="000.000.000-00"
            android:inputType="number"
            android:padding="16dp"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textViewPasswordRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Senha"
            android:textColor="@color/grey"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/editTextTextPasswordRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/light_pink"
            android:ems="10"
            android:hint="pelo menos 6 caracteres"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textSize="17dp" />

        <LinearLayout
            android:id="@+id/parentView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewBirthdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nascimento"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/editTextBirthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/light_pink"
                    android:ems="10"
                    android:hint="dd/mm/aaaa"
                    android:inputType="date"
                    android:drawableRight="@drawable/baseline_calendar_month_24"
                    android:focusable="false"
                    android:textSize="12dp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewCEP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CEP"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/editTextTextCEP"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/light_pink"
                    android:ems="10"
                    android:hint="00000-000"
                    android:inputType="number"
                    android:padding="16dp"
                    android:textSize="17dp" />

            </LinearLayout>

        </LinearLayout>




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerBtn"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/deep_pink"
            android:text="Confirmar"
            android:textAllCaps="true"
            android:textColor="@color/light_grey"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Já está cadastrado? Faça Login Aqui!!"
            android:textAlignment="center"
            android:textColor="#FF2E2D2D"
            android:textSize="15dp" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>